    $("#search-parcel").click(function () {
        var term = $("#search-zip-input").val();

        $.ajax({
            type: "POST",
            url: "/Order/SearchParcelPickups",
            data: JSON.stringify(term),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {

            },
        })
    })

    $("#delivery-submit").click(function () {
        var deliveryForm = $("delivery-form").serialize();
        var parcelPickup = function () {
            var parcelPickups = document.getElementsByName('parcel-pickup');
            for (var i = 0; i < parcelPickups.length; i++) {
                if (parcelPickups[i].checked) {
                    return parcelPickups[i].value;
                } else {
                    return null
                }
            }
        }
        var data = deliveryForm + "&pacelpickup=" + parcelPickup;
    });


